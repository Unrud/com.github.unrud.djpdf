        {
          "type": "file",
          "url": "https://github.com/tesseract-ocr/tessdata/raw/4.0.0/equ.traineddata",
          "sha256": "8f660323d8a7b7a0e8d2fae1a3439e6e470222bfbb990b2ab7fe9e1fb4791c0b"
