        {
          "type": "file",
          "url": "https://github.com/tesseract-ocr/tessdata/raw/4.0.0/spa.traineddata",
          "sha256": "0b0fcbb4665189e01ab8019e591f014dd7260460de072543edd4b2cb4ede7c96"
        },
        {
